@model FPFI.Models.Entry2
@using FPFI.Extensions

@{
    ViewData["Title"] = "1 Configure";
    ViewData.AddActivePage(EntriesNavPages.Step1);
}

<form id="Step1" asp-action="Step1" method="post" class="form-horizontal">
    @await Html.PartialAsync("_Step1", new FPFI.Models.Entry
    {
        Id = Model.Id,
        AgeStart = Model.AgeStart,
        AgeEnd = Model.AgeEnd,
        Distribution = Model.Distribution,
        DistributionThinning = Model.DistributionThinning,
        Model = Model.Model,
        VolumeFormula = Model.VolumeFormula,
        Way = Model.Way,
        Description = Model.Description
    })
    <div class="form-group">
        <label asp-for="Deviation" class="col-md-3 control-label" title="@(Display.GetAttribute<Entry2>("Deviation","Description"))"></label>
        <div class="col-md-5">
            <input asp-for="Deviation" class="form-control" placeholder="@Model.Deviation" />
            <span asp-validation-for="Deviation" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Species" class="col-md-3 control-label" title="@(Display.GetAttribute<Entry2>("Species","Description"))"></label>
        <div class="col-md-5">
            <select class="form-control" asp-for="Species" asp-items="ViewBag.Species"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="HeightFunction" class="col-md-3 control-label" title="@(Display.GetAttribute<Entry2>("HeightFunction","Description"))"></label>
        <div class="col-md-5">
            <select class="form-control" asp-for="HeightFunction" asp-items="ViewBag.Height"></select>
        </div>
    </div>
</form>