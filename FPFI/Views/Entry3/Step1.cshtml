@section Scripts{
    <script>
        $(document).ready(function () {
        @foreach (var model in ViewData["Model"] as SelectList)
        {
            Model e;
            Enum.TryParse<Model>(model.Value, true, out e);
            <text>
@Html.Raw($@"$('select#Model option[value=""{model.Value}""]').attr('title',""{e.GetDescription()}"");")</text>
        }
        });
    </script>
}